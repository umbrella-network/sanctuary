{
  "name": "sanctuary",
  "version": "0.2.6",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umbrella-network/sanctuary.git"
  },
  "scripts": {
    "lint": "eslint ./src/**/*.ts ./test/**/*.ts",
    "lint-fix": "eslint ./src/**/*.ts ./test/**/*.ts --fix",
    "clean": "rimraf dist",
    "compile": "tsc -p .",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts' --check",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "copy:assets": "cpx 'src/**/*.{graphql,html,png,json}' dist",
    "start:dev": "tsnd --respawn src/server.ts",
    "start:dev:worker": "tsnd --respawn src/worker.ts",
    "start:dev:scheduler": "tsnd --respawn src/scheduler.ts",
    "build": "npm run clean && npm run compile && npm run copy:assets",
    "start": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "start:scheduler": "node dist/scheduler.js",
    "test": "cross-env NODE_ENV=testing mocha --require ts-node/register --ui bdd 'test/**/*.test.ts'",
    "test:e2e:only-tests": "cross-env NODE_ENV=testing mocha --require ts-node/register --ui bdd 'test/**/*.e2e.ts'",
    "test:e2e": "start-server-and-test 'cross-env NODE_ENV=testing npm run start:dev' http://localhost:3003/health test:e2e:only-tests"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.2.0",
    "@types/mongoose": "^5.7.36",
    "@types/moxios": "^0.4.9",
    "@types/newrelic": "^7.0.0",
    "@types/node": "^14.11.2",
    "@types/sinon": "^9.0.10",
    "@types/uuid": "^8.3.0",
    "@types/yargs": "^15.0.8",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.10.0",
    "mocha": "^8.2.1",
    "moxios": "^0.4.0",
    "prettier": "^2.2.1",
    "sinon": "^9.2.3",
    "start-server-and-test": "^1.11.7",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.4.1",
    "@umb-network/toolbox": "^0.4.0",
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "bullmq": "^1.9.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cpx": "^1.5.0",
    "crypto-random-string": "^3.3.0",
    "dotenv": "^8.2.0",
    "ethers": "^5.0.17",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "inversify": "^5.0.1",
    "ioredis": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9",
    "newrelic": "^7.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "uuid": "^8.3.0",
    "uuidv4": "^6.2.4",
    "winston": "^3.3.3",
    "yargs": "^16.1.0"
  }
}
